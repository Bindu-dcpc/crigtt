<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:lang="http://www.springframework.org/schema/lang"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:task="http://www.springframework.org/schema/task"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    
    <!--====================================================================================================
    = THREAD GROUPS
    =====================================================================================================-->
    <beans:bean id="threadGroupValidate" parent="threadGroup">
        <beans:constructor-arg index="0" type="java.lang.ThreadGroup" ref="threadGroupRoot"/>
        <beans:constructor-arg index="1" type="java.lang.String" value="#{ threadGroupRoot.name }-validate"/>
    </beans:bean>
    
    <!--====================================================================================================
    = TASK EXECUTORS
    =====================================================================================================-->
    <beans:bean id="taskExecutorValidate" parent="taskExecutor" abstract="true"
        p:threadGroup-ref="threadGroupValidate"/>
    
    <!--suppress SpringPlaceholdersInspection -->
    <beans:bean id="taskExecutorValidateSchematron" parent="taskExecutorValidate"
        p:corePoolSize="${crigtt.validate.schematron.task.executor.pool.size.initial}"
        p:maxPoolSize="${crigtt.validate.schematron.task.executor.pool.size.max}"
        p:queueCapacity="${crigtt.validate.schematron.task.executor.queue.size}"
        p:threadNamePrefix="#{ threadGroupValidate.name }-schematron"/>
    
    <!--====================================================================================================
    = SCHEMATRONS
    =====================================================================================================-->
    <beans:bean id="schematron" class="gov.hhs.onc.crigtt.validate.CrigttSchematron" abstract="true">
        <beans:property name="parameters">
            <beans:map>
                <beans:entry key="diagnose" value="#{ T(gov.hhs.onc.crigtt.config.CrigttConfigurationValues).YES }"/>
                <beans:entry key="full-path-notation" value="2"/>
                <beans:entry key="generate-path" value="true" value-type="java.lang.Boolean"/>
                <beans:entry key="langCode" value="#{ T(java.util.Locale).ENGLISH.language }"/>
            </beans:map>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="schematronImpl" class="gov.hhs.onc.crigtt.validate.impl.CrigttSchematronImpl" parent="schematron" abstract="true">
        <beans:property name="xsltExecutables">
            <beans:array>
                <beans:ref bean="xsltExecSchematronInclude"/>
                <beans:ref bean="xsltExecSchematronExpand"/>
                <beans:ref bean="xsltExecSchematronValidationReport"/>
            </beans:array>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="schematronCcdaR2" parent="schematronImpl"
        p:description="Consolidated Clinical Document Architecture (C-CDA) Release 2.0"
        p:displayName="C-CDA R2"
        p:name="ccda-r2"
        p:source="classpath:META-INF/crigtt/schematron/ccda-r2/C-CDA-R2.sch">
        <beans:property name="referencedDocuments">
            <beans:map>
                <beans:entry key="voc.xml" value="classpath:META-INF/crigtt/schematron/ccda-r2/voc.xml"/>
            </beans:map>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="schematronCcdaR2CancerReg" parent="schematronImpl"
        p:description="Consolidated Clinical Document Architecture (C-CDA) Release 2.0 Cancer Registry"
        p:displayName="C-CDA R2 Cancer Registry"
        p:name="ccda-r2-cancer-reg"
        p:source="classpath:META-INF/crigtt/schematron/ccda-r2-cancer-reg/CancerIG_R1D1.sch">
        <beans:property name="referencedDocuments">
            <beans:map>
                <beans:entry key="voc.xml" value="classpath:META-INF/crigtt/schematron/ccda-r2-cancer-reg/voc.xml"/>
            </beans:map>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = VALIDATORS
    =====================================================================================================-->
    <beans:bean id="validator" class="gov.hhs.onc.crigtt.validate.CrigttValidator" abstract="true"/>
    
    <beans:bean id="validatorImpl" class="gov.hhs.onc.crigtt.validate.impl.CrigttValidatorImpl" parent="validator" abstract="true"/>
    
    <beans:bean id="validatorCrigtt" parent="validatorImpl">
        <beans:property name="schematrons">
            <beans:array>
                <beans:ref bean="schematronCcdaR2"/>
                <beans:ref bean="schematronCcdaR2CancerReg"/>
            </beans:array>
        </beans:property>
    </beans:bean>
</beans:beans>