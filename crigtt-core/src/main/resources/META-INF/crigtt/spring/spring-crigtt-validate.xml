<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:lang="http://www.springframework.org/schema/lang"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:task="http://www.springframework.org/schema/task"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    
    <!--====================================================================================================
    = DOCUMENTS
    =====================================================================================================-->
    <beans:bean id="docSchematronSkeleton" parent="doc" factory-bean="docBuilderCrigtt" factory-method="build"
        c:src="classpath*:META-INF/crigtt/schematron/iso-schematron-xslt2/iso_schematron_skeleton_for_saxon.xsl"
        p:uri="iso_schematron_skeleton_for_saxon.xsl"/>
    
    <!--====================================================================================================
    = XSLT EXECUTABLES
    =====================================================================================================-->
    <beans:bean id="xsltExecSchematronInclude" parent="xsltExecCrigtt" factory-bean="xsltCompilerCrigtt" factory-method="compile"
        c:src="classpath*:META-INF/crigtt/schematron/iso-schematron-xslt2/iso_dsdl_include.xsl"/>
    
    <beans:bean id="xsltExecSchematronExpand" parent="xsltExecCrigtt" factory-bean="xsltCompilerCrigtt" factory-method="compile"
        c:src="classpath*:META-INF/crigtt/schematron/iso-schematron-xslt2/iso_abstract_expand.xsl"/>
    
    <beans:bean id="xsltExecSchematronValidationReport" parent="xsltExecCrigtt" factory-bean="xsltCompilerCrigtt" factory-method="compile"
        c:src="classpath*:META-INF/crigtt/schematron/iso-schematron-xslt2/iso_svrl_for_xslt2.xsl"/>
    
    <beans:bean id="xsltExecValidatorResponseHtml" parent="xsltExecCrigtt" factory-bean="xsltCompilerCrigtt" factory-method="compile"
        c:src="classpath*:META-INF/crigtt/style/crigtt/crigtt-validate-response-html.xsl">
        <beans:constructor-arg name="extFuncs">
            <beans:array>
                <beans:ref bean="extFuncEscapeHtml"/>
                <beans:ref bean="extFuncFormatTimestamp"/>
            </beans:array>
        </beans:constructor-arg>
    </beans:bean>
    
    <!--====================================================================================================
    = VALIDATOR SCHEMATRONS
    =====================================================================================================-->
    <beans:bean id="validatorSchematron" class="gov.hhs.onc.crigtt.validate.ValidatorSchematron" abstract="true"/>
    
    <beans:bean id="validatorSchematronImpl" class="gov.hhs.onc.crigtt.validate.impl.ValidatorSchematronImpl" parent="validatorSchematron" abstract="true"
        p:queryBinding="xslt2"
        p:schemaVersion="ISO19757-3">
        <beans:property name="extensionFunctions">
            <beans:array>
                <beans:ref bean="extFuncValidatorStaticVocab"/>
            </beans:array>
        </beans:property>
        <beans:property name="parameters">
            <beans:map>
                <beans:entry key="allow-foreign" value="true" value-type="java.lang.Boolean"/>
                <beans:entry key="diagnose" value="#{ T(gov.hhs.onc.crigtt.config.CrigttConfigurationValues).YES }"/>
                <beans:entry key="full-path-notation" value="2"/>
                <beans:entry key="generate-path" value="true" value-type="java.lang.Boolean"/>
                <beans:entry key="langCode" value="#{ T(java.util.Locale).ENGLISH.language }"/>
            </beans:map>
        </beans:property>
        <beans:property name="referencedDocuments">
            <beans:array>
                <beans:ref bean="docSchematronSkeleton"/>
            </beans:array>
        </beans:property>
        <beans:property name="xsltExecutables">
            <beans:array>
                <beans:ref bean="xsltExecSchematronInclude"/>
                <beans:ref bean="xsltExecSchematronExpand"/>
                <beans:ref bean="xsltExecSchematronValidationReport"/>
            </beans:array>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="validatorSchematronCcdaR2" parent="validatorSchematronImpl"
        p:id="ccda-r2"
        p:name="Consolidated Clinical Document Architecture (C-CDA) Release 2.0"
        p:source="classpath*:META-INF/crigtt/schematron/ccda-r2/C-CDA-R2.sch">
        <beans:property name="staticVocabDocument">
            <beans:bean parent="doc" factory-bean="docBuilderCrigtt" factory-method="build"
                c:src="classpath*:META-INF/crigtt/schematron/ccda-r2/voc.xml"
                p:uri="voc.xml"/>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="validatorSchematronCcdaR2CancerReg" parent="validatorSchematronImpl"
        p:id="ccda-r2-cancer-reg"
        p:name="Consolidated Clinical Document Architecture (C-CDA) Release 2.0 Cancer Registry DSTU 1.1"
        p:source="classpath*:META-INF/crigtt/schematron/ccda-r2-cancer-reg/CancerIG_R1D1dot1.sch">
        <beans:property name="staticVocabDocument">
            <beans:bean parent="doc" factory-bean="docBuilderCrigtt" factory-method="build"
                c:src="classpath*:META-INF/crigtt/schematron/ccda-r2-cancer-reg/voc.xml"
                p:uri="voc.xml"/>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = CACHES
    =====================================================================================================-->
    <beans:bean id="cacheValidator" parent="cacheCrigtt">
        <beans:property name="configuration">
            <!--suppress SpringPlaceholdersInspection -->
            <beans:bean parent="configCacheCrigtt"
                p:maxElementsInMemory="${crigtt.cache.validator.mem.elems.max}"
                p:name="cacheValidator"/>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = THREAD GROUPS
    =====================================================================================================-->
    <beans:bean id="threadGroupValidator" parent="threadGroup">
        <beans:constructor-arg index="0" type="java.lang.ThreadGroup" ref="threadGroupCrigtt"/>
        <beans:constructor-arg index="1" type="java.lang.String" value="#{ threadGroupCrigtt.name }-validate"/>
    </beans:bean>
    
    <!--====================================================================================================
    = TASK EXECUTION
    =====================================================================================================-->
    <!--suppress SpringPlaceholdersInspection -->
    <beans:bean id="taskExecutorValidator" parent="taskExecutorCrigtt"
        p:corePoolSize="${crigtt.task.executor.validator.pool.size.core}"
        p:keepAliveSeconds="${crigtt.task.executor.validator.keep.alive.seconds}"
        p:maxPoolSize="${crigtt.task.executor.validator.pool.size.max}"
        p:threadGroup-ref="threadGroupValidator"
        p:threadNamePrefix="#{ threadGroupValidator.name }-"/>
    
    <!--====================================================================================================
    = REST TEMPLATES
    =====================================================================================================-->
    <beans:bean id="restTemplateValidatorDynamicVocabService" parent="restTemplate">
        <beans:constructor-arg name="messageConverters">
            <beans:list>
                <beans:ref bean="httpMsgConvForm"/>
                <beans:ref bean="httpMsgConvMappingJackson2"/>
            </beans:list>
        </beans:constructor-arg>
        <beans:property name="requestFactory">
            <!--suppress SpringPlaceholdersInspection -->
            <beans:bean parent="clientHttpReqFactoryHttpComponents"
                p:connectTimeout="${crigtt.validator.dynamic.vocab.service.conn.timeout}"
                p:readTimeout="${crigtt.validator.dynamic.vocab.service.read.timeout}"/>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = VALIDATOR TASKS
    =====================================================================================================-->
    <beans:bean id="validatorTask" class="gov.hhs.onc.crigtt.validate.ValidatorTask" abstract="true"/>
    
    <!--====================================================================================================
    = VALIDATOR SCHEMATRON TASKS
    =====================================================================================================-->
    <beans:bean id="validatorTaskSchematron" class="gov.hhs.onc.crigtt.validate.ValidatorSchematronTask" parent="validatorTask" abstract="true"/>
    
    <beans:bean id="validatorTaskSchematronImpl" class="gov.hhs.onc.crigtt.validate.impl.ValidatorSchematronTaskImpl" parent="validatorTaskSchematron"
        abstract="true"/>
    
    <beans:bean id="validatorTaskSchematronCrigtt" parent="validatorTaskSchematronImpl" abstract="true">
        <beans:property name="phaseLevels">
            <beans:map>
                <beans:entry key="warnings" value="WARN"/>
                <beans:entry key="errors" value="ERROR"/>
            </beans:map>
        </beans:property>
    </beans:bean>
    
    <!--suppress SpringBeanConstructorArgInspection -->
    <beans:bean id="validatorTaskSchematronCcdaR2" parent="validatorTaskSchematronCrigtt" lazy-init="true" scope="prototype"
        p:schematron-ref="validatorSchematronCcdaR2"/>
    
    <!--suppress SpringBeanConstructorArgInspection -->
    <beans:bean id="validatorTaskSchematronCcdaR2CancerReg" parent="validatorTaskSchematronCrigtt" lazy-init="true" scope="prototype"
        p:schematron-ref="validatorSchematronCcdaR2CancerReg"/>
    
    <!--====================================================================================================
    = VALIDATOR DYNAMIC VOCABULARY TASKS
    =====================================================================================================-->
    <beans:bean id="validatorTaskDynamicVocab" class="gov.hhs.onc.crigtt.validate.ValidatorDynamicVocabTask" parent="validatorTask" abstract="true"/>
    
    <beans:bean id="validatorTaskDynamicVocabImpl" class="gov.hhs.onc.crigtt.validate.impl.ValidatorDynamicVocabTaskImpl" parent="validatorTaskDynamicVocab"
        abstract="true"/>
    
    <!--suppress SpringBeanConstructorArgInspection, SpringPlaceholdersInspection -->
    <beans:bean id="validatorTaskDynamicVocabCrigtt" parent="validatorTaskDynamicVocabImpl" lazy-init="true" scope="prototype"
        p:partContentType="#{ T(org.springframework.http.MediaType).TEXT_XML }"
        p:partName="file"
        p:serviceUri="${crigtt.validator.dynamic.vocab.service.uri}">
        <beans:property name="requestHeaders">
            <beans:bean parent="httpHeaders"
                p:accept="#{ T(org.springframework.http.MediaType).APPLICATION_JSON }"
                p:contentType="#{ T(org.springframework.http.MediaType).MULTIPART_FORM_DATA }"/>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = VALIDATOR SERVICES
    =====================================================================================================-->
    <beans:bean id="validatorService" class="gov.hhs.onc.crigtt.validate.ValidatorService" abstract="true"/>
    
    <beans:bean id="validatorServiceImpl" class="gov.hhs.onc.crigtt.validate.impl.ValidatorServiceImpl" parent="validatorService"
        p:digester="#{ T(br.net.woodstock.rockframework.security.digest.util.Digesters).SHA512 }">
        <beans:property name="taskBeanNames">
            <beans:array>
                <beans:idref bean="validatorTaskSchematronCcdaR2"/>
                <beans:idref bean="validatorTaskSchematronCcdaR2CancerReg"/>
                <beans:idref bean="validatorTaskDynamicVocabCrigtt"/>
            </beans:array>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = VALIDATOR RENDERERS
    =====================================================================================================-->
    <beans:bean id="validatorRenderer" class="gov.hhs.onc.crigtt.validate.render.ValidatorRenderer" abstract="true">
        <beans:property name="defaultOptions">
            <beans:map>
                <beans:entry key="#{ T(gov.hhs.onc.crigtt.validate.render.ValidatorRenderOptions).FORMAT_NAME }" value="false" value-type="java.lang.Boolean"/>
                <beans:entry key="#{ T(gov.hhs.onc.crigtt.validate.render.ValidatorRenderOptions).TIME_ZONE_NAME }" value-ref="timeZoneDefault"/>
            </beans:map>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = JSON VALIDATOR RENDERERS
    =====================================================================================================-->
    <beans:bean id="validatorRendererJson" class="gov.hhs.onc.crigtt.validate.render.JsonValidatorRenderer" parent="validatorRenderer"
        abstract="true"/>
    
    <beans:bean id="validatorRendererJsonImpl" class="gov.hhs.onc.crigtt.validate.render.impl.JsonValidatorRendererImpl" parent="validatorRendererJson"/>
    
    <!--====================================================================================================
    = XML VALIDATOR RENDERERS
    =====================================================================================================-->
    <beans:bean id="validatorRendererXml" class="gov.hhs.onc.crigtt.validate.render.XmlValidatorRenderer" parent="validatorRenderer"
        abstract="true"/>
    
    <beans:bean id="validatorRendererXmlImpl" class="gov.hhs.onc.crigtt.validate.render.impl.XmlValidatorRendererImpl" parent="validatorRendererXml"/>
    
    <!--====================================================================================================
    = HTML VALIDATOR RENDERERS
    =====================================================================================================-->
    <beans:bean id="validatorRendererHtml" class="gov.hhs.onc.crigtt.validate.render.HtmlValidatorRenderer" parent="validatorRenderer"
        abstract="true"/>
    
    <beans:bean id="validatorRendererHtmlImpl" class="gov.hhs.onc.crigtt.validate.render.impl.HtmlValidatorRendererImpl" parent="validatorRendererHtml"/>
</beans:beans>